{
  "name": "password-manager",
  "version": "1.0.0",
  "description": "Pass manager app",
  "main": "main.js",
  "scripts": {
    "start": "electron ./src/main.js",
    "test": "echo \"error. no tests configured\" && exit 1",
    "build": "webpack --config ./webpack.config.js",
    "package": "electron-builder"
  },
  "build": {
    "appId": "ali.symeri.password-manager",
    "productName": "Pass manager",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    }
  },
  "repository": "git@github.com:haha150/password-manager.git",
  "author": {
    "name": "Ali Symeri",
    "email": "alisymeri@hotmail.com"
  },
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "electron": "^25.3.0",
    "electron-builder": "^24.4.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
